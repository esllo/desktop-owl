{
  "name": "petitcon",
  "version": "1.0.8",
  "main": "index.js",
  "author": "esllo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "e": "NODE_ENV=development electron .",
    "build:win": "electron-builder --win --x64",
    "build:osx": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "productName": "petitcon",
    "appId": "esllo.petitcon",
    "asar": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./res/icon.ico",
      "fileAssociations": [
        {
          "ext": [
            "ptc"
          ],
          "icon": "./res/ptc.ico",
          "name": "Petitcon File",
          "role": "Viewer"
        }
      ]
    },
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./res/icon.icns",
      "fileAssociations": [
        {
          "ext": [
            "ptc"
          ],
          "icon": "./res/icon.png",
          "name": "Petitcon File",
          "role": "Viewer"
        }
      ]
    },
    "dmg": {
      "title": "petitcon",
      "icon": "./res/icon.icns"
    },
    "portable": {
      "artifactName": "petitcon.exe"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": false,
      "installerLanguages": [
        "ko_KR"
      ],
      "language": "1042"
    },
    "publish": null
  },
  "dependencies": {
    "express": "^4.17.3",
    "jszip": "^3.7.1"
  }
}
